<!-- list.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College List</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>College List</h1>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>College Name Not Found</th>
                    <th>Course Name</th>
                    <th><%= category %></th>
                    <th>Chance Of Getting (%)</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(item => { %>
                    <tr>
                        <td><%= item['College Name Not Found'] %></td>
                        <td><%= item['Course Name'] %></td>
                        <td><%= item[category] %></td>
                        <td><%= item['ChanceOfGetting'] %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div class="pagination">
        <% if (page > 1) { %>
            <a href="/list?rank=<%= rank %>&category=<%= category %>&preferredCourse=<%= preferredCourse %>&page=<%= page - 1 %>">Previous</a>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === page) { %>
                <a class="active" href="#"><%= i %></a>
            <% } else { %>
                <a href="/list?rank=<%= rank %>&category=<%= category %>&preferredCourse=<%= preferredCourse %>&page=<%= i %>"><%= i %></a>
            <% } %>
        <% } %>
        <% if (page < totalPages) { %>
            <a href="/list?rank=<%= rank %>&category=<%= category %>&preferredCourse=<%= preferredCourse %>&page=<%= page + 1 %>">Next</a>
        <% } %>
    </div>

    <div>
        <a href="/downloadPDF?rank=<%= rank %>&category=<%= category %>&preferredCourse=<%= preferredCourse %>">Download PDF</a>
    </div>

</body>
</html>
